{
    "publisher": "jackiotyu",
    "name": "word-separator",
    "displayName": "word-separator",
    "description": "config vscode word separator 配置vscode文字分割符",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:separators-explorer"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "WordSeparator.updateSeparators",
                "title": "Update Separators"
            },
            {
                "command": "WordSeparator.copySeparators",
                "title": "Copy Separators"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "separators-explorer",
                    "title": "Separators Explorer",
                    "icon": "$(whole-word)"
                }
            ]
        },
        "views": {
            "separators-explorer": [
                {
                    "id": "separatorsManage",
                    "name": "Separators Manage",
                    "contextualTitle": "Package Explorer",
                    "type": "webview"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "配置word-separator",
            "properties": {
                "WordSeparator.group": {
                    "type": "array",
                    "default": [
                        {
                            "name": "default",
                            "separators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?"
                        }
                    ],
                    "description": "配置word-separator规则列表",
                    "items": {
                        "type": "object",
                        "title": "分组",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "规则名称"
                            },
                            "separators": {
                                "type": "string",
                                "description": "规则内容"
                            },
                            "isDefault": {
                                "type": "boolean",
                                "description": "是否为默认配置（不允许修改）"
                            }
                        }
                    }
                }
            }
        },
        "configurationDefaults": {
            "WordSeparator.group": [
                {
                    "name": "default",
                    "separators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
                    "isDefault": true
                },
                {
                    "name": "cn separators",
                    "separators": "。，、；：“”‘’「」—…？！"
                },
                {
                    "name": "link separators",
                    "separators": ".;/?:@&=+$,"
                },
                {
                    "name": "class separators",
                    "separators": "-"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run package",
        "compile": "webpack",
        "watch": "cross-env NODE_ENV=development concurrently \"npm --prefix web run serve\" \"webpack --watch\"",
        "package": "cross-env NODE_ENV=production concurrently \"npm --prefix web run build\" \"webpack --mode production --devtool hidden-source-map\"",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.74.0",
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "@typescript-eslint/parser": "^5.27.0",
        "@vscode/test-electron": "^2.1.3",
        "concurrently": "^7.6.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.16.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "ts-loader": "^9.3.0",
        "typescript": "^4.7.2",
        "webpack": "^5.72.1",
        "webpack-cli": "^4.9.2"
    },
    "dependencies": {
        "@types/fs-extra": "^11.0.1",
        "fs-extra": "^11.1.0"
    }
}